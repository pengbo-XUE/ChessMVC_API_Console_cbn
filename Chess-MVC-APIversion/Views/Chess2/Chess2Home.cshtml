            Technologies used:
        </h2>
        <Ul>
            <li>ASP.NET CORE 5.0.1 MVC</li>
            <li>ASP.NET CORE Console App</li>
            <li>Bootstrap 5</li>
            <li>Javascript</li>
            <li>Pipe</li>
        </Ul>
        @using (Html.BeginForm("StartChess", "Chess2"))
